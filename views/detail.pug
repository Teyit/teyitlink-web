doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        title Teyit.link
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
        link(href='//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css', rel='stylesheet')
        link(rel='stylesheet', href='/public/style.css')
        link(rel='shortcut icon', href='/public/favicon.ico', type='image/x-icon')
        link(rel='icon', href='/public/favicon.ico', type='image/x-icon')

    body
        .container
            .row.row2
                .col-sm-2
                    a(href='/')
                        h1(style='margin:0px;')
                            span.largenav
                                img.img-responsive(src='/public/logo.png', alt='')
                .col-sm-5
                    .row
                        label(for='saved-input') Kayıt Edilen Adres:
                        input#saved-input.dib.flipkart-navbar-input(type='text', style='width:100%; font-size:13px;', value=request_url, readonly)
                .col-sm-3
                .col-sm-2.pull-right
                    div
                        strong Tarih:
                    div
                        span #{created_at}
        .capture-screen
            .container
                span.cs-link Sayfa Önizlemesi
                iframe.site-source(src='//s3.eu-central-1.amazonaws.com/teyitlink/' + archive_id + '/index.html', width='100%', height='1200px', frameborder='0')
        script(src='//code.jquery.com/jquery-1.12.4.min.js')
        script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
        script(src='/public/app.js')
